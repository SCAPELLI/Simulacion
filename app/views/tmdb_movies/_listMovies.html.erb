<div class="container">
  <div class="row align-items-start">
    <% (0..(@movies.count-1)).each do |i|%>
      <div class="card" style="width: 18rem;height: 50rem; overflow: hidden;">
        <img src=https://image.tmdb.org/t/p/w300<%= @movies[i]["poster_path"] %> class="card-img-top" alt="Poster">
        <div class="card-body" style="overflow: auto;">
        <h3><%= @movies[i]["title"] %> (<%= @movies[i]['release_date'].split('-')[0]%>)</h3>
        <p class="card-text "><%= @movies[i]["overview"]%></p>
        </div>
        <div class="card-footer">
            <p>Rate: <%= @movies[i]["vote_average"]%></p>
            <a class="btn btn-primary" href=<%= "/movies/id/" + @movies[i]["id"].to_s%>> Details </a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<form>
    <div>
      <button type="submit" class="btn btn-primary btn-lg">Export profile</button>
    </div>
</form>