<form action="/movies/seeker" accept-charset="UTF-8" method="post">
  <input type="hidden" name="authenticity_token" value="...">

  <div>
    <label for="article_title">Title</label><br>
    <input type="text" name="movie[title]" id="article_title">
  </div>

  <div>
    <label for="article_body">Body</label><br>
    <textarea name="movie[year]" id="article_body"></textarea>
  </div>

  <div>
    <input type="submit" name="commit" value="Search movies" data-disable-with="Create Filters">
  </div>
</form>